<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.login.CreateAccountActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_action_back_arrow"/>


    <TextView
        android:id="@+id/ca_tv"
        android:layout_width="wrap_content"
        android:fontFamily="@font/pureunjeonnam_bold"
        android:layout_height="wrap_content"
        android:textSize="34sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="40dp"
        android:text="Create account"/>

    <EditText
        android:id="@+id/email_signUp_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ca_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:background="@drawable/rectangle_1"
        android:drawableStart="@drawable/baseline_email_24"
        android:elevation="30dp"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:paddingStart="16dp"
        android:drawablePadding="8dp"
        />

    <EditText
        android:id="@+id/password_signUp_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_signUp_et"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:background="@drawable/rectangle_1"
        android:drawableStart="@drawable/baseline_lock_24"
        android:elevation="30dp"
        android:hint="Password(6글자 이상)"
        android:inputType="textPassword"
        android:paddingStart="16dp"
        android:drawablePadding="8dp"
        />
    <EditText
        android:id="@+id/password2_signUp_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_signUp_et"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:background="@drawable/rectangle_1"
        android:drawableStart="@drawable/baseline_lock_24"
        android:elevation="30dp"
        android:hint="Password Confirm"
        android:inputType="textPassword"
        android:paddingStart="16dp"
        android:drawablePadding="8dp"
        />


    <EditText
        android:id="@+id/username_signUp_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password2_signUp_et"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:background="@drawable/rectangle_1"
        android:drawableStart="@drawable/baseline_person_24"
        android:elevation="30dp"
        android:hint="Username"
        android:inputType="text"
        android:lines="1"
        android:maxLines="1"
        android:paddingStart="16dp"
        android:drawablePadding="8dp"
        />

    <EditText
        android:id="@+id/mobile_signUp_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/username_signUp_et"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:background="@drawable/rectangle_1"
        android:drawableStart="@drawable/baseline_smartphone_24"
        android:elevation="30dp"
        android:hint="Mobile"
        android:inputType="number"
        android:paddingStart="16dp"
        android:drawablePadding="8dp"
        />

    <TextView
        android:layout_below="@id/mobile_signUp_et"
        android:id="@+id/createAcount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/pureunjeonnam_bold"
        android:paddingRight="8dp"
        android:text="계정생성"
        android:textSize="28sp" />

    <ImageView
        android:id="@+id/signUp_push_iv"
        android:layout_width="65dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="57dp"
        android:layout_toRightOf="@id/createAcount_tv"
        android:layout_below="@id/mobile_signUp_et"
        android:src="@drawable/loginbutton" />

</RelativeLayout>
</ScrollView>