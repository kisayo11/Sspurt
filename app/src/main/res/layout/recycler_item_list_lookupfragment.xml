<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_weight="1"
    android:background="@drawable/rectangle_banner"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_cv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/samplemap"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <TextView
                android:id="@+id/nickname_tv"
                style="@style/basicFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="4dp"
                android:gravity="center_vertical"
                android:text="nickname"
                android:textSize="12dp"
                app:layout_constraintLeft_toRightOf="@id/profile_cv" />

            <TextView
                android:id="@+id/locationTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="@font/pureunjeonnam"
                android:text="남산공원"
                android:textSize="10dp"
                app:layout_constraintTop_toBottomOf="@id/profile_cv" />

            <TextView
                android:id="@+id/exerciseType_tv_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="@font/pureunjeonnam"
                android:text="달리기"
                android:textSize="10dp"
                app:layout_constraintLeft_toRightOf="@id/locationTag"
                app:layout_constraintTop_toBottomOf="@id/profile_cv" />

            <TextView
                android:id="@+id/ExerciseTime_tv_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="@font/pureunjeonnam"
                android:text="00:00:00"
                android:textSize="10dp"
                app:layout_constraintLeft_toRightOf="@id/exerciseType_tv_item"
                app:layout_constraintTop_toBottomOf="@id/profile_cv" />

            <TextView
                android:id="@+id/ExerciseDistance_tv_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="@font/pureunjeonnam"
                android:text="00.00km"
                android:textSize="10dp"
                app:layout_constraintLeft_toRightOf="@id/ExerciseTime_tv_item"
                app:layout_constraintTop_toBottomOf="@id/profile_cv" />

            <TextView
                android:id="@+id/ExerciseDate_tv_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="@font/pureunjeonnam"
                android:text="2024년 10월 04일"
                android:textSize="10dp"
                app:layout_constraintTop_toBottomOf="@id/locationTag" />


            <ImageView
                android:id="@+id/picture_iv"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_margin="4dp"
                app:layout_constraintTop_toBottomOf="@id/locationTag" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>