<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="4dp"
    android:layout_height="250dp"
    android:layout_weight="1"
    android:background="@drawable/rectangle_banner"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_cv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/samplemap"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <ImageView
                android:id="@+id/exerciseType_cv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/icon_running100"
                app:layout_constraintBottom_toBottomOf="@id/profile_cv"
                app:layout_constraintLeft_toRightOf="@id/profile_cv"

                />

            <TextView
                android:id="@+id/nickname_tv"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_height="30dp"
                android:layout_margin="4dp"
                android:gravity="center_vertical"
                android:text="nickname"
                android:ellipsize="end"
                android:lines="1"
                android:textSize="14dp"
                app:layout_constraintLeft_toRightOf="@id/exerciseType_cv" />

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="4dp"
                android:weightSum="2"
                app:layout_constraintTop_toBottomOf="@id/profile_cv"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:id="@+id/tvview_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/locationTag"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/pureunjeonnam"
                        android:text="남산공원"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/ExerciseTime_tv_item"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/pureunjeonnam"
                        android:text="00:00:00"
                        android:textSize="10dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ExerciseDate_tv_item"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/pureunjeonnam"
                        android:text="24/10/04"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/ExerciseDistance_tv_item"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/pureunjeonnam"
                        android:text="00.00km"
                        android:textSize="10dp" />
                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/picture_iv"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_sspurt" />

    </androidx.constraintlayout.widget.ConstraintLayout>





</com.google.android.material.card.MaterialCardView>