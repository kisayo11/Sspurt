<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_my_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginBottom="24dp"
            android:background="@color/white">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_cv"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:src="@drawable/profile"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.cardview.widget.CardView
                android:id="@+id/nickname_cv"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="16dp"
                app:layout_constraintBottom_toBottomOf="@id/profile_cv"
                app:layout_constraintRight_toRightOf="@id/profile_cv"
                tools:ignore="MissingConstraints">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/changeUsername"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/edit_96" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_user_name"
                style="@style/basicFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="닉네임을 설정해주세요"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/profile_cv"
                app:layout_constraintRight_toRightOf="@id/profile_cv"
                app:layout_constraintTop_toBottomOf="@id/profile_cv" />

            <TextView
                android:id="@+id/tv_user_email"
                style="@style/basicFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="E-mail을 설정해주세요"
                android:textColor="@color/pwreset"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="@id/tv_user_name"
                app:layout_constraintRight_toRightOf="@id/tv_user_name"
                app:layout_constraintTop_toBottomOf="@id/tv_user_name" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/account_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_layout"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:id="@+id/profile_layout_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#fff9f9"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/profile_iv"
                    style="@style/basicFontStyle"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:padding="8dp"
                    android:src="@drawable/profile" />

                <TextView
                    android:id="@+id/profile_tv"
                    style="@style/basicFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@id/profile_iv"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Account"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_iv"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/logOut_tv"
                        style="@style/basicFontStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="48dp"
                        android:paddingBottom="8dp"
                        android:text="로그아웃"
                        android:textColor="#3F51B5"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/resetPassword_tv"
                        style="@style/basicFontStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="48dp"
                        android:paddingBottom="8dp"
                        android:text="비밀번호변경"
                        android:textColor="#3F51B5"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/deleteId_tv"
                        style="@style/basicFontStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="48dp"
                        android:text="회원탈퇴"
                        android:textColor="#3F51B5"
                        android:textSize="16sp" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/notification_layout_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#fff9f9"
                android:orientation="horizontal">

                <ImageView
                    style="@style/basicFontStyle"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:padding="8dp"
                    android:src="@drawable/baseline_notifications_none_24" />

                <TextView
                    style="@style/basicFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Notification"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/archive_layout_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#fff9f9"
                android:orientation="horizontal">

                <ImageView
                    style="@style/basicFontStyle"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:padding="8dp"
                    android:src="@drawable/baseline_inbox_24" />

                <TextView
                    style="@style/basicFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Archive"
                    android:textSize="18sp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/bugReport_layout_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#fff9f9"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bugReport_iv"
                    style="@style/basicFontStyle"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:padding="8dp"
                    android:src="@drawable/baseline_report_gmailerrorred_24" />

                <TextView
                    android:layout_toRightOf="@id/bugReport_iv"
                    style="@style/basicFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Error report"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bugReport_iv"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/bugReport_tv"
                        style="@style/basicFontStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="48dp"
                        android:paddingBottom="8dp"
                        android:text="글 남기기"
                        android:textColor="#3F51B5"
                        android:textSize="16sp" />


                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>
</ScrollView>