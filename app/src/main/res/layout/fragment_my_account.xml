<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="24dp"
        android:background="@color/white">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_cv"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_user_name"
            style="@style/basicFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="user_name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/profile_cv"
            app:layout_constraintRight_toRightOf="@id/profile_cv"
            app:layout_constraintTop_toBottomOf="@id/profile_cv" />

        <TextView
            android:id="@+id/tv_user_email"
            style="@style/basicFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="google.com@google.com"
            android:textColor="@color/pwreset"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="@id/tv_user_name"
            app:layout_constraintRight_toRightOf="@id/tv_user_name"
            app:layout_constraintTop_toBottomOf="@id/tv_user_name" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/account_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_layout"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/profile_layout_click"
            android:background="#fff9f9"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <ImageView
                style="@style/basicFontStyle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:padding="8dp"
                android:src="@drawable/profile" />

            <TextView
                style="@style/basicFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="Profile"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/notification_layout_click"
            android:background="#fff9f9"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <ImageView
                style="@style/basicFontStyle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:padding="8dp"
                android:src="@drawable/baseline_notifications_none_24" />

            <TextView
                style="@style/basicFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="Notification"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/archive_layout_click"
            android:layout_width="match_parent"
            android:background="#fff9f9"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <ImageView
                style="@style/basicFontStyle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:padding="8dp"
                android:src="@drawable/baseline_inbox_24" />

            <TextView
                style="@style/basicFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="Archive"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bugReport_layout_click"
            android:layout_width="match_parent"
            android:background="#fff9f9"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <ImageView
                style="@style/basicFontStyle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:padding="8dp"
                android:src="@drawable/baseline_report_gmailerrorred_24" />

            <TextView
                style="@style/basicFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="Error report"
                android:textSize="18sp" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>