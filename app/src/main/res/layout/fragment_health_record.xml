<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="350dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:fontFamily="@font/pureunjeonnam_bold"
                android:gravity="center"
                android:text="0.00"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:fontFamily="@font/pureunjeonnam_bold"
                android:gravity="center"
                android:text="-'--"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/tv_3"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:fontFamily="@font/pureunjeonnam_bold"
                android:gravity="center"
                android:text="00:00"
                android:textSize="28sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/tv_1_1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/pureunjeonnam_bold"
                android:gravity="center"
                android:text="이동거리(km)"
                android:textColor="@color/pwreset"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_2_1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/pureunjeonnam_bold"
                android:gravity="center"
                android:text="평균 속도(km/h)"
                android:textColor="@color/pwreset"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_3_1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/pureunjeonnam_bold"
                android:gravity="center"
                android:text="이동시간"
                android:textColor="@color/pwreset"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/tv_4"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:fontFamily="@font/pureunjeonnam_bold"
                android:gravity="center"
                android:text="0.00"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/tv_5"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:fontFamily="@font/pureunjeonnam_bold"
                android:gravity="center"
                android:text=""
                android:textSize="28sp" />

            <TextView
                android:id="@+id/tv_6"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:fontFamily="@font/pureunjeonnam_bold"
                android:gravity="center"
                android:text=""
                android:textSize="28sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/tv_4_1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/pureunjeonnam_bold"
                android:gravity="center"
                android:text="현재 속도(km)"
                android:textColor="@color/pwreset"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_5_1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/pureunjeonnam_bold"
                android:gravity="center"
                android:text="심장 강화 점수"
                android:textColor="@color/pwreset"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_6_1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/pureunjeonnam_bold"
                android:gravity="center"
                android:text="칼로리"
                android:textColor="@color/pwreset"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="18dp"
            android:visibility="visible"
            android:weightSum="3">

            <ImageButton
                android:id="@+id/stop_ib"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_action_stop"
                android:visibility="invisible" />

            <ImageButton
                android:id="@+id/pause_ib"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_action_pause"
                android:visibility="invisible" />

            <ImageButton
                android:id="@+id/empty"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground" />
        </LinearLayout>
    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/record_ani"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:lottie_autoPlay="true"
        android:clickable="true"
        android:focusable="true"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/record_animation" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/countdown_ani"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/countdown_ani" />
</androidx.constraintlayout.widget.ConstraintLayout>

